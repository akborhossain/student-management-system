@model IEnumerable<Student_Management_System.Models.Entities.Registration>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table print-content">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
               Course Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>

            <th> Student Name</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Student.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<button class="btn btn-primary" onclick="printTable()">Print</button>

<script>
    function printTable() {
        var printContent = document.querySelector('.print-content');
        var originalBodyContent = document.body.innerHTML;

        document.body.innerHTML = printContent.outerHTML;

        window.print();

        document.body.innerHTML = originalBodyContent;
    }
</script>
